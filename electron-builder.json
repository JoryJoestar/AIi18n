{
    "appId": "AIi18n",
    "asar": false,
    "directories": {
        "output": "dist"
    },
    "nsis": {
        "oneClick": false,
        "perMachine": false,
        "allowElevation": false,
        "allowToChangeInstallationDirectory": true,
        "shortcutName": "AIi18n"
    },
    "extraResources": {
        "from": "./app/database/prod.db",
        "to": "app/build/database/prod.db"
    },
    "win": {
        "target": "nsis",
        "icon": "app/icon/favicon@4x.ico"
    },
    "linux": {
        "target": [
            "snap"
        ],
        "icon": "app/icon/favicon@4x.png"
    },
    "mac": {
        "icon": "app/icon/favicon@4x.icns"
    },
    "files": [
        "build/electron/**/*",
        "build/backend/**/*",
        "build/frontend/**/*",
        "!**/node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
        "!**/node_modules/*/{test,__tests__,tests,powered-test,example,examples}",
        "!**/node_modules/*.d.ts",
        "!**/node_modules/.bin",
        "!src",
        "!config",
        "!README.md",
        "!scripts",
        "!build/renderer",
        "!dist"
    ]
}